<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

  <changeSet id="create_migration_mapping_table" author="Camunda">
    <createTable tableName="${prefix}MIGRATION_MAPPING">
      <column name="KEY" type="BIGINT">
        <constraints primaryKey="true"/>
      </column>
      <column name="ID" type="VARCHAR(64)" />
      <column name="TYPE" type="VARCHAR(255)" />
    </createTable>

    <createIndex tableName="${prefix}MIGRATION_MAPPING" indexName="${prefix}IDX_MIGRATION_MAPPING_ID">
      <column name="KEY" />
    </createIndex>
  </changeSet>

</databaseChangeLog>
